<h3>Events</h3>

<div class="well">
<table class="table">
	<tr>
		<th>Title</th>
		<th>Date</th>
		<th></th>
		<th></th>
	</tr>
	<% @events.each do |event| %>
		<tr>
			<td><%= event.title %></td>
			<td><%= event.date %></td>
			<td><%= link_to "Edit", edit_event_path(event) %></td>
			<td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
</table>
<%= link_to 'Add new event', new_event_path, class: 'btn btn-success btn-block' %>
</div>
<br>