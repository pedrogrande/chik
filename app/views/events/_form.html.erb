  <div class="form-group">
    <%= f.input :title, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :date %>
  </div>
  <div class="form-group">
    <%= f.input :desciption, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :location, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :suburb, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :postcode, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :link, input_html: { class: 'form-control' } %>
  </div>
