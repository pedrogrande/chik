<h1>Enquiries</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Received</th>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Enquiry type</th>
      <th>Message</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @enquiries.each do |enquiry| %>
      <tr>
        <td><%= enquiry.created_at.strftime('%d %b %y') %></td>
        <td><%= enquiry.name %></td>
        <td><%= enquiry.email %></td>
        <td><%= enquiry.phone %></td>
        <td><%= enquiry.enquiry_type %></td>
        <td><%= enquiry.message.truncate(20) %><% if enquiry.message.length > 20 %> <%= link_to 'read more', enquiry %><% end %></td>
        <td><%= link_to 'Delete', enquiry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'Return to Control Centre', admin_path, class: 'btn btn-success' %>
