<%= simple_form_for(@download) do |f| %>
  <%= f.error_notification %>

  
  <div class="form-group">
    <%= f.input :name, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.input :file, input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.input :content, input_html: { class: 'form-control' } %>
  </div>

    <%= f.button :submit %>
<% end %>
